{
    "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "target": "es6",
      "strict": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "rootDir": "./src",
      "outDir": "./dist",
      "resolveJsonModule": true,
      "baseUrl": "./src",
      "paths": {
        "@/*": ["*"],
        "@core/*": ["core/*"],
        "@modules/*": ["modules/*"],
      },        
    },
    "includes": [
      "src/**/*"
    ],
  }